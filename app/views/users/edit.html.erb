<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>User info</h1>
        <%= form_with model:@user do |f| %>

        <div class="form-group">
          <label class="d-block",for="inputName">Name</label>
          <%= f.text_field :name,autofocus: true,id:"inputName" %>
        </div>

        <div>
          <label class="d-block",for="inputImage">Image</label>
          <%= f.file_field :profile_image,placeholder: "プロフィール画像",accept:"image/*" %>
        </div>

        <div class="form-group">
          <label class="d-block",for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction,autofocus: true,id:"inputIntroduction" %>
        </div>

        <button type="submit" class="btn btn-secondary d-block mb-5">Update User</button>
        <% end %>

      </div>
    </div>
  </div>
</main>