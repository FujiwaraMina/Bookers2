<main>
<div class="container px-5 px-sm-0">
 <div class="row flex">
   <div class="col-md-3">
    <h2>User info</h2>
    <div>
     <%= image_tag @user.get_profile_image(100,100) %>
    </div>
    <table class="table">
      <tbody>
       <tr>
         <th>name</th>
         <th><%= @user.name %></th>
       </tr>
       <tr>
         <th>introduction</th>
         <th><%= @user.introduction %></th>
       </tr>
      </tbody>
    </table>

    <%= link_to edit_user_path(@user),class:"btn mb-2 btn-outline-secondary btn-block" do %>
      Edit
    <% end %>

    <%= form_with model: @book do |f| %>
      <h2>New book</h2>
      <p>Title</p>
      <%= f.text_field :title,class: "mb-3" %>

      <p>Opinion</p>
      <%= f.text_area :body,class: "mb-3" %>

      <button type="submit" class="btn btn-success d-block">Create Book</button>
      <% end %>
    </div>

   <div class="col-md-8 offset-md-1">
     <h1>Users</h1>
       <table class="table">
         <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
         </thead>
         <tbody>
           <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><span><%= user.name %></span></td>
              <td><%= link_to user_path(user) do %>
                  Show
                  <% end %>
              </td>
            </tr>
           <% end %>
         </tbody>
       </table>
  </div>

</div>
</div>

</main>