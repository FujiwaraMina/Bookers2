<main>
  <div class="container px-5 px-sm-0">
    <div class="row flex">
      <%= render 'list',book: @book_new ,user: @book.user %>

      <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
      <tbody>
         <tr>
            <td>
            　   <%= link_to user_path(@book.user) do %>
                  <%= image_tag @book.user.get_profile_image(100,100) %><br>
            　   <% end %>
                <%= link_to @book.user.name,user_path(@book.user) %>
              </td>
              <td><span><%= link_to @book.title,book_path %></span></td>
              <td><span><%= @book.body %></span></td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to edit_book_path,class:"btn btn-success" do %>
                   Edit
                  <% end %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to book_path(@book),class:"btn btn-danger",method: :delete ,"data-confirm" => "本当に消しますか?" do %>
                  Destroy
                  <% end %>
                <% end %>
              </td>
            </tr>
      </tbody>
      </table>
      </div>
    </div>
  </div>
</main>